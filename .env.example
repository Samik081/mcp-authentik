# Authentik MCP Server Configuration
# Copy this file to .env and fill in your values

# URL of your Authentik instance (required)
AUTHENTIK_URL=https://authentik.example.com

# API token for authentication (required)
# Generate at: Authentik Admin > Directory > Tokens and App passwords
AUTHENTIK_TOKEN=your-api-token-here

# Access tier: "read-only" or "full" (default: full)
# AUTHENTIK_ACCESS_TIER=full

# Comma-separated list of tool categories to enable (default: all)
# AUTHENTIK_CATEGORIES=users,groups,applications

# Enable debug logging (default: false)
# DEBUG=true
